<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description"
		content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/">
	<title>Single Product</title>

	<!-- * product zoom css -->
	<link rel="stylesheet" href="static/user/css/productZoom.css">
</head>

<body class="marginTopForBody">

	<!--PreLoader-->
	<div class="loader">
		<div class="loader-inner">
			<div class="circle"></div>
		</div>
	</div>
	<!--PreLoader Ends-->

	<!-- * alert -->
	<div class="position-fixed col-10 d-flex justify-content-center" style="z-index: 10;">
		<div class="alert alert-info fade show  w-auto d-none " role="alert" id="bsAlert">
		</div>
	</div>
	<!-- * alert end -->

	<!-- * breadcrumbs -->
	<div class="container">
		<h3> <span class="orangeTextColor">My profile </span></h3>
	</div>
	<!-- * end breadcrumbs -->

	<!-- * referral code -->
	<div class="container mt-3 ">
		<button id="copyReferralCodeBtn" data-code="<%= user?.referralCode %>"
			class="btn btn-outline-info d-flex align-items-center rounded-pill">
			<span class="mr-2 fw-bold">Copy referral code</span>
			<i class="fa-solid fa-copy fa-2x"></i>
		</button>
	</div>
	<!-- * referral code end -->



	

	<!-- * user buttons -->
	<div class="container d-sm-flex justify-content-center flex-sm-row flex-cloumn col-12 my-5 ">
		<section class="container d-flex justify-content-between flex-wrap align-items-start ">

			<a id="orders" href="/profile/orders" class=" d-flex justify-content-center p-3 shadow rounded mb-5 userBtnCard ">
				<div class="pr-4 d-flex justify-content-center align-items-center ">
					<i class="fa-solid fa-box fa-4x orangeTextColor"></i>
				</div>
				<div class="col-9 py-2">
					<h5 class="btnTitle">Your orders</h5>
					<p class="fs-5 text-capitalize">Track, return or buy new things</p>
				</div>
			</a>

			<a id="wishlist" href="/profile/wishlist"
				class="d-flex justify-content-between p-3 shadow rounded mb-5 userBtnCard ">
				<div class="pr-4 d-flex justify-content-center align-items-center ">
					<i class="fa-solid fa-heart fa-4x orangeTextColor"></i>
				</div>
				<div class="col-9 py-2">
					<h5 class="btnTitle">Wishlist</h5>
					<p class="fs-5 text-capitalize text-capitalize">Your Wishlists </p>
				</div>
			</a>

			<a href="/profile/address" class="d-flex justify-content-center p-3 shadow rounded mb-5 userBtnCard ">
				<div class="pr-4 d-flex justify-content-center align-items-center ">
					<i class="fa-solid fa-location-dot fa-4x orangeTextColor"></i>
				</div>
				<div class="col-9 py-2">
					<h5 class="btnTitle">Your Address</h5>
					<p class="fs-5 text-capitalize">Edit address for orders and gifts</p>
				</div>
			</a>
			<a class="d-flex justify-content-center p-3 shadow rounded mb-5 userBtnCard " href="/profile/wallet">
				<div class="pr-4 d-flex justify-content-center align-items-center ">
					<i class="fa-solid fa-wallet fa-4x orangeTextColor"></i>
				</div>
				<div class="col-9 py-2">
					<h5 class="btnTitle">Wallet</h5>
					<p class="fs-5 text-capitalize">Available amount ₹<span id="walletAmount">
							<%= walletBalanceAmount %>
						</span> </p>
				</div>
			</a>

			<a class="d-flex justify-content-center p-3 shadow rounded mb-5 userBtnCard ">
				<div class="pr-4 d-flex justify-content-center align-items-center ">
					<i class="fa-solid fa-headset fa-4x orangeTextColor"></i>
				</div>
				<div class="col-9 py-2">
					<h5 class="btnTitle">Contact us</h5>
					<p class="fs-5 text-capitalize">contact customer support</p>
				</div>
			</a>

			<a href="/profile/user" class="d-flex justify-content-center p-3 shadow rounded mb-5 userBtnCard ">
				<div class="pr-4 d-flex justify-content-center align-items-center ">
					<i class="fa-solid fa-lock fa-4x orangeTextColor"></i>
				</div>
				<div class="col-9 py-2">
					<h5 class="btnTitle">Login and security</h5>
					<p class="fs-5 text-capitalize">Edit name and mobile number</p>
				</div>
			</a>

			<a href="/profile/coupons" class="d-flex justify-content-center p-3 shadow rounded mb-5 userBtnCard ">
				<div class="pr-4 d-flex justify-content-center align-items-center ">
					<i class="fa-solid fa-ticket fa-4x orangeTextColor"></i>
				</div>
				<div class="col-9 py-2">
					<h5 class="btnTitle">Coupons</h5>
					<p class="fs-5 text-capitalize">check coupons</p>
				</div>
			</a>

			<a class="d-flex justify-content-center p-3 shadow rounded mb-5 userBtnCard ">
				<div class="pr-4 d-flex justify-content-center align-items-center ">
					<i class="fa-solid fa-users fa-4x orangeTextColor"></i>
				</div>
				<div class="col-9 py-2">
					<h5 class="btnTitle">About us</h5>
					<p class="fs-5 text-capitalize">Know more about us</p>
				</div>
			</a>

			<a class="d-flex justify-content-center p-3 shadow rounded mb-5 userBtnCard " id="profileLogoutBtn">
				<div class="pr-4 d-flex justify-content-center align-items-center ">
					<i class="fa-solid fa-right-from-bracket fa-4x orangeTextColor"></i>
				</div>
				<div class="col-9 py-2">
					<h5 class="btnTitle">logout</h5>
				</div>
			</a>


		</section>
	</div>
	<!-- * user buttons -->


	<!-- * suggestions -->
	<div class="container">
		<section class="mt-5 position-relative">
			<h3><span class="orange-text">Based on</span> browsing history</h3>

			<div class="d-flex justify-content-between align-items-center my-3 suggestionsBtnContainer">
				<button id="scroll-left" class="btn btn-secondary rounded-pill scroll-button left">
					<i class="fas fa-chevron-left"></i>
				</button>
				<button id="scroll-right" class="btn btn-secondary rounded-pill scroll-button right">
					<i class="fas fa-chevron-right"></i>
				</button>
			</div>

			<!-- * suggestions -->
			<div class="d-flex justify-content-between scrollContainer suggestionsContainer">
				<% for(let item of suggestions){ %>
					<!-- * mycard -->
					<div class="position-relative col-lg-2 col-md-3 m-1 mx-3 mb-3 text-center p-2 cardStoke ">
						<div class="position-absolute top-0 start-0">
							<a class="addToWishlistBtn" data-id="<%= item._id %>">
								<i class="fa-solid fa-heart fa-xl <%= item.isWishlisted  ? 'wishlistBtnIcon' : 'text-secondary' %>"></i>
							</a>
						</div>

						<div class="d-flex flex-column align-content-center ">
							<div class="d-flex justify-content-center ">
								<a class="cardImage" href="/product?productId=<%=item._id %>">
									<img src="<%= item.image[0]?.path  %>" alt="<%= item.image[0].originalName  %>">
								</a>
							</div>
							<h6>
								<%= item.name %>
							</h6>
							<h5 class="priceTextColor">₹<%= item.finalPrice%>
							</h5>
							<% if(item?.offer?.discountType) {%>
								<div class="d-flex justify-content-center ">
									<p class=" text-secondary px-3 textLineTrough">
										₹<%= item.price %>
									</p>
									<% if(item.offer.discountType==='percentage' ) {%>
										<p class="text-success px-3">
											<%= item.offer.discountValue %>% OFF
										</p>
										<% }else{ %>
											<p class="text-success px-3">₹<%= item.offer.discountValue %> OFF</p>
											<% } %>
								</div>
								<% } else { %>
									<div style='height:42px'></div>
									<% } %>
										<div class="d-flex align-items-baseline">
											<div class="d-flex pb-3 px-3">
												<% for(let i=0;i< 5 ;i++) {%>
													<% if(i<item.rating) {%>
														<i class="fa-solid fa-star fa-lg text-warning"></i>
														<% } else { %>
															<i class="fa-regular fa-star fa-lg text-warning"></i>
															<% } %>
																<% } %>
											</div>
											<span class="text-secondary">
												<%= item.peopleRated %>
											</span>
										</div>
										<button class="btn btn-outline-info rounded-pill addToCartBtn" data-id="<%= item._id %>"
											data-price="<%= item.finalPrice %>">
											<span>Add to Cart</span>
										</button>
						</div>
					</div>
					<!-- * end card -->
					<% } %>

			</div>
		</section>
	</div>
	<!-- * suggestions end -->




	<% scriptBlock=` <script src="static/user/scripts/user.js">
		</script>
		<script src="/static/user/scripts/cart.js"></script>
		<script src="/static/user/scripts/profile.js"></script>

		`
		%>

</body>

</html>