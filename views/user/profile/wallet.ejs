<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description"
    content="Responsive Bootstrap4 Shop Template, Created by Imran Hossain from https://imransdesign.com/">
  <title>Single Product</title>

  <!-- * product zoom css -->
</head>

<body class="marginTopForBody">

  <!--PreLoader-->
  <div class="loader">
    <div class="loader-inner">
      <div class="circle"></div>
    </div>
  </div>
  <!--PreLoader Ends-->

  <!-- * breadcrumbs -->
  <div class="container">
    <h3>My profile /<span class="orangeTextColor"> Wallet </span></h3>
  </div>
  <!-- * end breadcrumbs -->

  <!-- * alert -->
  <div class="position-fixed col-10 d-flex justify-content-center" style="z-index: 10;">
    <div class="alert alert-info fade show  w-auto d-none " role="alert" id="bsAlert">
    </div>
  </div>
  <!-- * alert end -->


  <!-- * user buttons -->
  <div class="container d-sm-flex justify-content-center flex-sm-row flex-cloumn col-12 my-5  ">

    <section class="container-sm d-flex justify-content-lg-start justify-content-between flex-wrap align-items-center flex-sm-row flex-column" >

      <div class="col-sm-3 col-12 h-100 my-2 d-flex align-items-start justify-content-center">
        <div class="">
          <input class="form-control w-100" id="amountInput" type="Number" placeholder="enter amount" />
          <div class="d-flex justify-content-center">
            <div id="paypalSection">
              <div id="paypal-button-container"></div>
              <p id="result-message"></p>
            </div>
          </div>
        </div>
      </div>

      <div class=" col-sm-8 col-12 justify-content-center">
        <div class="d-flex justify-content-center py-3   walletTransactionsTitle shadow">
          <h5 class="text-secondary">wallet amount : <span class="text-success">
              ₹<%= wallet?.balance %>
            </span> </h6>
        </div>

        <div class="my-2">
          <% for(const item of wallet?.transactions) {%>
            <div class="walletTransactions shadow rounded-3 p-2 px-3 my-2 ">
              <h6 class="<%= item.credit ? 'text-success' : 'text-danger' %>   "> amount : ₹<span>
                  <%= item.amount %>
                </span> </h6>
              <h6 class="text-secondary"> date : <span class="date">
                  <%= item.date %>
                </span> </h6>
            </div>
            <% } %>
        </div>
      </div>


    </section>

  </div>
  <!-- * user buttons -->

  <!-- *pagination  -->
  <div class="d-flex justify-content-center align-items-center p-2">
    <button class="btn btn-secondary  rounded-pill mx-2 w-auto smallBtn " id="prevBtn">
      <i class="fa-solid fa-chevron-left fa-xs"></i>
    </button>
    <div id="pageInfoContainer">
      <span>
        <%= page %> out of
      </span>
      <span>
        <%= numberOfPages %>
      </span>
    </div>
    <button class="btn btn-secondary  rounded-pill mx-2 w-auto smallBtn " id="nextBtn">
      <i class="fa-solid fa-chevron-right"></i>
    </button>
  </div>
  <!-- *pagination end -->


  <script>
    const pageDetails = {
      page: parseInt("<%= page %>"),
      numberOfPages: parseInt("<%= numberOfPages %>"),
    } 
  </script>

  <% scriptBlock=` <script
    src="https://www.paypal.com/sdk/js?client-id=${paypalClientId}&buyer-country=US&currency=USD&components=buttons&enable-funding=venmo"
    data-sdk-integration-source="developer-studio">
    </script>
    <script src="/static/user/scripts/user.js"> </script>
    <script src="/static/user/scripts/wallet.js"></script>
    `
    %>

</body>

</html>